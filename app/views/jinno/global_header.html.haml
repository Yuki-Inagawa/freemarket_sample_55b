          %li.global-header__bottom__right__list__child
            = link_to extra_view_path, class: "global-header__bottom__right__list__child__link" do
              = fa_icon "bell", class: "global-header__bottom__right__list__child__link--bell"
              %span.global-header__bottom__right__list__child__link--icon お知らせ
          %li.global-header__bottom__right__list__child
            = link_to extra_view_path, class: "global-header__bottom__right__list__child__link" do
              = fa_icon "check", class: "global-header__bottom__right__list__child__link--check"
              %span.global-header__bottom__right__list__child__link--icon やることリスト
          %li.global-header__bottom__right__list__child--my-page
            = link_to extra_view_path, class: "global-header__bottom__right__list__child--my-page__link" do
              %figure.global-header__bottom__right__list__child--my-page__link__person
                .global-header__bottom__right__list__child--my-page__link__person__box
                  = image_tag("member_photo_noimage_thumb.png", width: '32', height: '32', alt: "マイページアイコン画像")
