        %ul.global-header__bottom__left-list
          %li.global-header__bottom__left-list__child
            %h2.global-header__bottom__left-list__child-text
              = link_to extra_view_path, class: "global-header__bottom__left-list__child-text-link" do
                = fa_icon "list-ul", class: "global-header__bottom__left-list__child-text-link--icon"
                %span カテゴリーから探す
          %li.global-header__bottom__left-list__child
            %h2.global-header__bottom__left-list__child-text
              = link_to extra_view_path, class: "global-header__bottom__left-list__child-text-link" do
                = fa_icon "tag", class: "global-header__bottom__left-list__child-text-link--icon"
                %span ブランドから探す
      .global-header__bottom__right
        %ul.global-header__bottom__right__list
          %li.global-header__bottom__right__list__child
            = link_to extra_view_path, class: "global-header__bottom__right__list__child__link" do
              = fa_icon "heart", class: "global-header__bottom__right__list__child__link--heart"
