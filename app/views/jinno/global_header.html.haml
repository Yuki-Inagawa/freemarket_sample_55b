%header.global-header
  .global-header-inner
    .global-header__top
      %h1
        = link_to image_tag("logo.svg", width: '134', height: '36', alt: 'メインアイコン'), extra_view_path, class: 'global-header__top__main-logo' 
      %form.global-header__top-form{:action => "https://www.mercari.com/jp/search/"}
        %input.global-header__top-form__input{:name => "keyword", :placeholder => "何かお探しですか？", :type => "search", :value => ""}/
        %i.global-header__top-icon
        = fa_icon "search", class: "global-header__top-icon__glass"
