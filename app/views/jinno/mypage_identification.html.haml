                %option 熊本県
                %option 大分県
                %option 宮崎県
                %option 鹿児島県
                %option 沖縄県

            .user-identification-form__body__forms__content__form-groups
            %label{for: "zip_code", class: "user-identification-form__body__forms__content__form-groups__"}
              市区町村
            %span.user-identification-form__body__forms__content__form-groups__any--tag 
              任意
            %input.user-identification-form__body__forms__content__form-groups__input-area{name: "zip_code", placeholder: "例）1234567", :type => "text", :value => "しぶや"}/
            .user-identification-form__body__forms__content__form-groups
            %label{for: "zip_code", class: "user-identification-form__body__forms__content__form-groups__"}
              番地
            %span.user-identification-form__body__forms__content__form-groups__any--tag 
              任意
            %input.user-identification-form__body__forms__content__form-groups__input-area{name: "zip_code", placeholder: "例）1234567", :type => "text", :value => "１０３"}/
            .user-identification-form__body__forms__content__form-groups
            %label{for: "zip_code", class: "user-identification-form__body__forms__content__form-groups__"}
              建物名
            %span.user-identification-form__body__forms__content__form-groups__any--tag 
              任意
            %input.user-identification-form__body__forms__content__form-groups__input-area{name: "zip_code", placeholder: "例）1234567", :type => "text", :value => "アジアビル"}/
            %button.user-identification-form__body__forms__content__form-groups--btn{type: "submit"} 登録する
            .user-identification-form__body__forms__content__form-groups__question
              %p.user-identification-form__body__forms__content__form-groups__question__text
                = link_to extra_view_path, class: "user-identification-form__body__forms__content__form-groups__question__text__link" do
                  本人情報の登録について
                  = fa_icon "chevron-right", class: "user-identification-form__body__forms__content__form-groups__question__text__link__icon"
= render 'shared/footer'