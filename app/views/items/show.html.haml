                = image_tag("mark-zuckerberg1.jpg")
              .other-items__user__contents__content__body
                .other-items__user__contents__content__body__name ザック
                .other-items__user__contents__content__body__num
                  .other-items__user__contents__content__body__num__price ¥100
                  .other-items__user__contents__content__body__num__like
                    %i.fa.fa-heart
                      %span 2
          %section.other-items__user__contents__content
