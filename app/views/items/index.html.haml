= render 'shared/header'
/////グローバルヘッダーここまで
////ここからメインヴィジュアル(スライダー)
.swiper-parent 
  .maincontainer
    .swiper-container
      .swiper-wrapper
        .top-main-visual.swiper-slide
          .top-main-visual__inner
            .top-main-visual__inner__contents
              %h2.top-main-visual__inner__contents__text-main
                スマホでかんたん
                %br
                フリマアプリ
              %p.top-main-visual__inner__contents__text-sub
                メルカリはスマホカメラからすぐに出品できる
                %br
                購入時も安心な独自システムのアプリです
              .top-main-visual__inner__contents__links
                = link_to image_tag("app-store.svg", width: '170', height: '50', alt: "App store画像"), "https://apps.apple.com/jp/app/id667861049?l=ja", class: "top-main-visual__inner__contents__links--apple-icon", target: '_brank'
                = link_to image_tag("google-play.svg", width: '170', height: '50', alt: "Google play画像"), "https://play.google.com/store/apps/details?id=com.kouzoh.mercari&hl=ja", class: "top-main-visual__inner__contents__links--apple-icon", target: '_blank'
            .top-main-visual__inner--mobile-visual
              = image_tag("main_content_pc.png", width: '440', height: '390', alt: "メルカリスマホアプリ画像")
        .swiper-slide
          .top-sub-visual
            -# = image_tag("banner-camp.jpg")
      .swiper-button-prev
      .swiper-button-next
      .swiper-pagination.swiper-pagination-black
//ヘッダー＆メインヴィジュアル終了
//ここからメインコンテンツ
%section.top-main__contents
  %h2.top-main__contents__topic
    ピックアップカテゴリー
  %section.top-main__contents__wrapper
    %h3.top-main__contents__category
      = link_to "レディース 新着アイテム", root_path, class: "top-main__contents__category__link"
    .top-main__contents__items-wrap
      - @items.each do |item|
        %section.top-main__contents__item-box
          -if item.status == 1
            .sold-out
              .sold_tag 
                %p SOLD
          .top-main__contents__item-box__image
            - item.images.each_with_index do |image, index|
              - if index == 0
                = link_to image_tag("#{image.image.url}", width: '213', height: '213', alt: "アイテム個別画像"), "/items/#{item.id}", class: "top-main__contents__item-box__image__img"
                - break
          .top-main__contents__item-box__body
            %h3.top-main__contents__item-box__body__text
              = item.name
            .top-main__contents__item-box__body__flex-box
              .top-main__contents__item-box__body__flex-box--price
                = number_to_currency(item.price, unit: "￥", precision: 0, format: "%u%n")
              .top-main__contents__item-box__body__flex-box--status
                = fa_icon "heart", class: "top-main__contents__item-box__body__flex-box--status--font"
                %span.top-main__contents__item-box__body__flex-box--status--good-count
    .top-main__contents__all-links
      = link_to "すべての商品を見る", "/", class: "top-main__contents__all-links__text"
