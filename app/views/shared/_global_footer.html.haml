.footer-container__over-flow-reset
  %aside.app__banner
    .app__banner__box
      .app__banner__box__left-side
        %h2 スマホでかんたんフリマアプリ
        %p 今すぐ無料ダウンロード！
        .app__banner__box__left-side__inner
          %figure.app__banner__box__left-side__inner__left
            = image_tag("mercari_icon.png")
          %ul.app__banner__box__left-side__inner__right
            %li.app__banner__box__left-side__inner__right__apple
              = link_to image_tag("app-store.svg", width: '133', height: '40', alt: "App store画像"), extra_view_path, class: "app__banner__left-side__inner-right__apple-icon"
            %li.app__banner__box__left-side__inner__right__google
              = link_to image_tag("google-play.svg", width: '133', height: '40', alt: "Google Play画像"), extra_view_path, class: "app__banner__left-side__inner-right__google-icon"
      .app__banner__box__right-side
        = image_tag("download_content_pc.png", width: '300', height: '262', alt: "メルカリモバイル画像")
  %footer.global-footer
    %nav.global-navigation
      .global-navigation__child-1
        %h2.global-navigation__child-1__guide
          メルカリについて
        %ul.global-navigation__child-1__list
          %li.global-navigation__child-1__list-item
            = link_to "会社概要（運営会社）", extra_view_path
          %li.global-navigation__child-1__list-item
            = link_to "採用情報", extra_view_path
          %li.global-navigation__child-1__list-item
            = link_to "プレスリリース", extra_view_path
          %li.global-navigation__child-1__list-item
            = link_to "公式ブログ", extra_view_path
          %li.global-navigation__child-1__list-item
            = link_to "メルカリロゴ利用ガイドライン", extra_view_path
          %li.global-navigation__child-1__list-item__twitter
            = link_to extra_view_path, class: "global-navigation__child-1__list-item__twitter" do
              = fa_icon "twitter", class: "global-navigation__child-1__list-item__twitter__icon"
          %li.global-navigation__child-1__list-item__facebook
            = link_to extra_view_path, class: "global-navigation__child-1__list-item__facebook" do
              = fa_icon "facebook-square", class: "global-navigation__child-1__list-item__facebook__icon"
      .global-navigation__child-2
        %h2.global-navigation__child-1__guide
          ヘルプ＆ガイド
        %ul.global-navigation__child-2__list
          %li.global-navigation__child-2__list-item
            = link_to "メルカリガイド", extra_view_path
          %li.global-navigation__child-2__list-item
            = link_to "らくらくメルカリ便", extra_view_path
          %li.global-navigation__child-2__list-item
            = link_to "ゆうゆうメルカリ便", extra_view_path
          %li.global-navigation__child-2__list-item
            = link_to "大型メルカリ便", extra_view_path
          %li.global-navigation__child-2__list-item
            = link_to "車体取引ガイド", extra_view_path
          %li.global-navigation__child-2__list-item
            = link_to "メルカリあんしん・あんぜん宣言！", extra_view_path
          %li.global-navigation__child-2__list-item
            = link_to "偽ブランド品撲滅への取り組み", extra_view_path
          %li.global-navigation__child-2__list-item
            = link_to "メルカリボックス", extra_view_path
      .global-navigation__child-3
        %h2.global-navigation__child-3__guide
          プライバシーと利用規約
        %ul.global-navigation__child-3__list
          %li.global-navigation__child-3__list-item
            = link_to "プライバシーポリシー", extra_view_path
          %li.global-navigation__child-3__list-item
            = link_to "メリカリ利用規約", extra_view_path
          %li.global-navigation__child-3__list-item
            = link_to "あんしんスマホサポート制度に関する利用規約", extra_view_path
          %li.global-navigation__child-3__list-item
            = link_to "コンプライアンスポリシー", extra_view_path
      .global-navigation__child-4
        %ul.global-navigation__child-4__list
          %li.global-navigation__child-4__list-item
            = link_to "個人データの安全管理に係る基本方針", extra_view_path
          %li.global-navigation__child-4__list-item
            = link_to "特定商取引に関する表記", extra_view_path
          %li.global-navigation__child-4__list-item
            = link_to "資金決済法に基づく表示", extra_view_path
          %li.global-navigation__child-4__list-item
            = link_to "法令順守と犯罪防止のために", extra_view_path
      .global-navigation__child-5
        %h2.global-navigation__child-5__guide
          国
        %ul.global-navigation__child-5__list
          %li.global-navigation__child-5__list-item
            = link_to "日本", extra_view_path
          %li.global-navigation__child-5__list-item
            = link_to "United States", extra_view_path
    .global-footer__bottom
      = link_to image_tag("logo-white.svg", width: '124', height: '33', alt: "App store画像"), extra_view_path, class: "global-footer-bottom__logo"
      %span.global-footer-bottom__copy-light
        %small.global-footer-bottom__copy-light__text
          &copy; 2019 Mercari