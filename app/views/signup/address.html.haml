.single-container
  %header.single-header
    %h1.mercari-logo
      = link_to image_tag("logo.svg", alt: "mercari"), "/users/how_pay", class: "mercari-logo__link"
    %nav.progress-bar
      %ol.clearfix
        %li
          会員情報
          .progress-status.first{style: "background-color: red;"}
        %li
          電話番号認証
          .progress-status{style: "background-color: red;"}
        %li.active
          お届け先住所入力
          .progress-status.right-gray
        %li 
          支払い方法
          .progress-status.gray
        %li 
          完了
          .progress-status.last.gray
  %main.single-main
    %section.l-single-container
      %h2.new-registration 住所入力
      =form_for @address, url: how_pay_signup_index_path, method: :get do |f|
        .new-registration-form__content
          .new-registration-form__content--form{style: "margin-top: 0;"}
            %label{for: "name"} お名前
            %span.form-require{style: "background-color: #ccc;"} 入れなくてもOK(笑)
            %input.input-default{type: "text", name: "famiy_name", placeholder: "例）東京"}
            %input.input-default{type: "text", name: "first_name", placeholder: "例）喰種"}
          .new-registration-form__content--form
            %label{for: "name"} お名前カナ
            %span.form-require{style: "background-color: #ccc;"} 入れなくてもOK(笑)
            %input.input-default{type: "text", name: "famiy_name", placeholder: "例）トウキョウ"}
            %input.input-default{type: "text", name: "first_name", placeholder: "例）グール"}
          .new-registration-form__content--form
            %label{for: "name"} 郵便番号
            %span.form-require 必須
            = f.text_field :postal_code, placeholder: "例）123-4567", class: 'input-default'
            - if @address.errors.any?
              .alert.alert-warning
                %ul
                  - @address.errors.full_messages_for(:postal_code).each do |message|
                    %li= message
          .new-registration-form__content--form
            %label 都道府県
            %span.form-require 必須
            .prefecture-select
              %i.icon-arrow-bottom
              =f.select :region, [["夢の国ワンダーランド","夢の国ワンダーランド"],["並行世界パラレルワールド","並行世界パラレルワールド"],["異次元海峡マサディヌス","異次元海峡マサディヌス"],["燃えさかる煉獄イグナイト","燃えさかる煉獄イグナイト"],["天空の楽園ホーリーガーデン","天空の楽園ホーリーガーデン"]], {}, class: "select-default"
          .new-registration-form__content--form
            %label{for: "name"} 市区町村
            %span.form-require 必須
            = f.text_field :city, placeholder: "例）渋谷区", class: 'input-default'
            - if @address.errors.any?
              .alert.alert-warning
                %ul
                  - @address.errors.full_messages_for(:city).each do |message|
                    %li= message
          .new-registration-form__content--form
            %label{for: "name"} 番地
            %span.form-require 必須
            = f.text_field :address_number, placeholder: "例）123-45", class: 'input-default'
            - if @address.errors.any?
              .alert.alert-warning
                %ul
                  - @address.errors.full_messages_for(:address_number).each do |message|
                    %li= message
          .new-registration-form__content--form
            %label{for: "name"} 建物名
            %span.form-require{style: "background: #ccc;"} 任意
            = f.text_field :building_name, placeholder: "例）渋谷109", class: 'input-default'
          .new-registration-form__content--form
            %label{for: "name"} 電話
            %span.form-require{style: "background: #ccc;"} 任意
            = f.text_field :phone_number, placeholder: "例) 11111111111", class: 'input-default'
          = f.submit '次へ進む', class: 'next-btn'
  
  = render 'shared/signup_footer'