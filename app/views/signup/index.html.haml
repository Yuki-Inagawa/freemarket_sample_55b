.single-container
  .exhibiton-header
    .exhibition-wrapper
      = link_to image_tag("logo.svg", width: '185', height: '49', alt: 'メインアイコン'), root_path
  %main.single-main
    %section.l-single-container
      %h2.new-registration 新規会員登録
      .new-registration-form
        .new-registration-form__content
          =link_to "/signup/registration", class: "mail-btn" do
            =fa_icon "envelope", class: "mail-icon"
            メールアドレスで登録する
          %button.facebook-login
            =fa_icon "facebook", class: "facebook-icon"
            Facebookで登録する
          %button#google-login.btn-default.btn-sns.btn-sns-google
            -# =fa_icon "google", class: "google-icon"
            Googleで登録する

  = render 'shared/signup_footer'