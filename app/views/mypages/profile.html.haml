.default-container  
  = render 'shared/header'

  - breadcrumb :profile
  = render "./shared/breadcrumbs"

  %main.user-profile
    .profile-main
      %i.fas.fa-line
      %h2.profile-main__title プロフィール
      .profile-form
        .profile-icon
          = image_tag("member_photo_noimage_thumb.png", alt: 'b', class: 'member_photo_noimage_thumb')
          %input.profile-icon__input{placeholder: "#{current_user.nickname}", type: "text"}
        
        .profile-text
          %textarea.profile-text__input{placeholder: "例）こんにちは☆ご覧いただきありがとうごさいます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に９号です。気持ちよくお取引できるよう心がけていますので、商品や発送方法などご質問ありましたらお気が図にどうぞ♪;", type: "text_area"}
          %button.profile-text__btn 変更する

    .profile-side
      = render 'shared/mypage_nav'
    
  = render 'shared/footer'
  = render 'shared/sell_page_btn'