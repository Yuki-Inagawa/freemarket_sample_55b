.default-container  
  = render 'shared/header'

  - breadcrumb :exhibition_list
  = render "./shared/breadcrumbs"

  %main.user-profile
    .profile-main   
      .mypage-tab
        %h2.mypage-tab-head 
          購入した商品
        .mypage-tabs
          %ul.mypage-tabs-left-trading
            %li.mypage-tabs-left-trading__tab
              %h3.tabs-title 取引中
          %ul.mypage-tabs-right-traded
            %li.mypage-tabs-right-traded__tab
              %h3.tabs-title 過去の取引

        .mypage-tab-content
          %ul.transaction
            - if @items.count >= 1
              - @items.each do |item|
                %li.transaction-now
                  .figure
                    = link_to image_tag("#{item.images.first.image}", alt: '画像', class: 'purchased_item_image')
                  .mypage-item-body
                    .mypage-item-body__text
                      = item.name
                    .mypage-item-status-done
                      取引終了
                    = fa_icon "chevron-right", class: 'icon'
            - else
              %li.transaction-not-found 過去に取引した商品がありません

    .profile-side
      = render 'shared/mypage_nav'
  
  = render 'shared/footer'
  = render 'shared/sell_page_btn'